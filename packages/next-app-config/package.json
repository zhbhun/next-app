{
  "name": "@next-app/config",
  "version": "1.0.0-beta.1",
  "description": "Next config for app",
  "author": "zhbhun",
  "license": "MIT",
  "homepage": "https://github.com/zhbhun/next-app",
  "repository": "https://github.com/zhbhun/next-app/tree/master/packages/next-app-config",
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "lib",
    "vendors"
  ],
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && babel src --out-dir lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "next-compose-plugins": "^2.1.1",
    "next-images": "^1.0.1",
    "node-sass": "^4.14.1",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-function-sent": "^7.1.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "eslint-config-ease-base": "^2.0.0",
    "lint-staged": "^7.3.0",
    "next": "https://cdn.jsdelivr.net/gh/zhbhun/next.js@7.0.3-beta.7/next.tgz",
    "prettier-config-ease": "^2.0.0",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6"
          },
          "spec": false,
          "loose": false,
          "modules": "commonjs",
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ],
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 2,
          "helpers": true,
          "regenerator": true,
          "useESModules": false
        }
      ]
    ],
    "sourceType": "unambiguous"
  },
  "publishConfig": {
    "access": "public"
  }
}
